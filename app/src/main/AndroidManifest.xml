<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.torres.companionshipapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.torres.companionshipapp.User"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login"> </activity>
        <activity android:name=".Registration"> </activity>
        <activity android:name=".ProfilePage"> </activity>
        <activity android:name=".FriendsFinder"> </activity>
        <activity android:name=".EventsFinder"> </activity>
        <activity android:name=".HobbyAdd"> </activity>
        <activity android:name=".HobbyDelete"> </activity>
        <activity android:name=".CustomActionBar"> </activity>

    </application>
</manifest>