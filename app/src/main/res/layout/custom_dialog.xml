<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_box"
    android:backgroundTint="@color/mat_blue"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_custom"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/sixteen_dp"
        android:textColor="@color/red"
        android:textSize="@dimen/thirty_sp" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/mat_blue"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/custom_dialog_button_ok"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_dialog"
                    android:clickable="true"
                    android:text="@string/dialog_button_ok"
                    android:layout_marginBottom="@dimen/sixteen_dp"
                    android:textAllCaps="false"
                    android:textColor="@color/red"
                    android:textSize="@dimen/twenty_four_sp" />
        </RelativeLayout>

</LinearLayout>